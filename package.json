{
  "name": "eloquentai-chat-widget",
  "version": "1.0.0",
  "main": "index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "https://github.com/itspauloroberto/eloquentai-chat-widget.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify",
    "dev": "vite",
    "test:standalone": "open test.html",
    "check": "tsc --noEmit"
  },
  "keywords": ["react", "chat", "widget", "eloquentai"],
  "author": "itspauloroberto",
  "license": "ISC",
  "description": "Embeddable chat widget component for React or plain JS apps.",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0",
    "@vitejs/plugin-react": "^4.7.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  }
}
