{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["react", "react-dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist", "demo"]
}
